<% include ./header %>
<% include topbar/topbar %>
<div id="page" ng-controller="DashboardCtrl">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
				<h1 class="page-header">Dashboard</h1>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default">
					<div class="panel-heading">
						<i class="fa fa-certificate"></i> Votre crédibilité et vos expériences
					</div>
					<div class="panel-body">
						<div class="col-xs-11 col-sm-11 col-md-11 col-lg-11">
							<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
								<span class="level1" ng-class="{'active': level == 'level1'}" style="left: 3%;">Intéressant</span>
								<span class="level2" ng-class="{'active': level == 'level2'}" style="left: 24%;">De qualité</span>
								<span class="level3" ng-class="{'active': level == 'level3'}" style="left: 44%;">Très utile</span>
								<span class="level4" ng-class="{'active': level == 'level4'}" style="left: 65%;">Reconnu</span>
								<span class="level5" ng-class="{'active': level == 'level5'}" style="left: 84%;">Indispensable</span>
							</div>
							<br><br>
							<div class="cont col-xs-12 col-sm-12 col-md-12 col-lg-12">
								<div class="progress">
									<div class="progress-bar" role="progressbar" ng-style="{ 'width' : credibilityWidth}"></div>
								</div>
								<span class="first" ng-class="{'border-change': userData.authorCredit + userData.modCredit >= credit.level1}"><i class="fa fa-certificate"></i></span>
								<span class="second" ng-class="{'border-change': userData.authorCredit + userData.modCredit >= credit.level2}"><i class="fa fa-certificate"></i></span>
								<span class="third" ng-class="{'border-change': userData.authorCredit + userData.modCredit >= credit.level3}"><i class="fa fa-certificate"></i></span>
								<span class="fourth" ng-class="{'border-change': userData.authorCredit + userData.modCredit >= credit.level4}"><i class="fa fa-certificate"></i></span>
								<span class="fifth" ng-class="{'border-change': userData.authorCredit + userData.modCredit >= credit.level5}"><i class="fa fa-certificate"></i></span>
							</div>
							<br>
							Credibilité : {{ userData.authorCredit + userData.modCredit }}
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-4">
				<div class="panel panel-default">
					<div class="panel-heading">
						<i class="fa fa-gear fa-fw"></i> Options pour les auteurs
					</div>
					<div class="panel-body">
						<button class="btn btn-success" ng-click="openUpgradeModal()">Tester</button>
					</div>
				</div>
			</div>

			<div class="col-lg-4">
				<div class="panel panel-default">
					<div class="panel-heading">
						<i class="fa fa-commenting"></i> Derniers sites utilisant <i>What Is Your Opinion?</i>
					</div>
					<!-- /.panel-heading -->
					<div class="panel-body">
						<div class="list-group">
							<div class="list-group-item" ng-repeat="app in apps" ng-if="appsPagination($index + 1)">
								<a ng-href="//{{ app.allowed_domain }}"> {{ app.allowed_domain }}</a>
							</div>
							<pagination direction-links="false" total-items="apps.length" item-per-page="7" max-size="7" ng-model="currentArticles" ng-if="apps.length > 7" class="pagination-sm">
						</div>
						<!-- /.list-group -->
						<button class="btn btn-success btn-block" href="/admin">Ajouter à mon site</button>
					</div>
				</div>
			</div>

			<div class="col-lg-4">
				<div class="panel panel-default">
					<div class="panel-heading">
						<i class="fa fa-commenting"></i> Derniers articles publiés
					</div>
					<!-- /.panel-heading -->
					<div class="panel-body">
						<div class="list-group">
							<div class="list-group-item" ng-repeat="article in articles | limitTo: 10">
								<a ng-href="//{{ article.link }}"> {{ article.link }}</a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
</body>
</html>
