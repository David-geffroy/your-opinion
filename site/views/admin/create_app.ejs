<% include ../header %>
		<% include topbar-admin %>
	<div id="page">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<h1 class="page-header">Créer une application</h1>
				</div>
			</div>
			<div class="row">
						<form class="form-signup" role="form" action="/admin/c_a" method="post">
						<div class="form-group row">
							<div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
								<label>Nom de l'application :</label>
								<input type="text"  class="form-control" name="name" required autofocus>
							</div>
						</div>
						<div class="form-group row">
							<div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
								<label>Domaine autorisé :</label>
								<input type="text" class="form-control" name="domain" placeholder="example.com" required autofocus>
							</div>
						</div>
						<br>
						<div class="form-group row">
							<div class="col-xs-9 col-sm-9 col-md-9 col-lg-9">
								<button class="btn btn-submit btn-success">Créer</button>
							</div>
						</div>
					</form>
				
			</div>
			<% include ../offer/features %>
			<br><br>
			<% include ../offer/offer-editors %>
		</div>
	</div>
</body>
</html>
